@model List<Theatre.Web.Models.TheatreShow>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="TheatreShows" asp-action="Create">Add new show</a>
    </div>

    @for(int i=0;i<Model.Count();i++)
    {
        var item = Model[i];

        if (i % 4 == 0)
        {
            @:<div class="row">
        }
        
        <div class="col-2 m-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title - @item.ShowDate</h5>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="TheatreShows" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                        <a asp-controller="TheatreShows" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        <a asp-controller="TheatreShows" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
        </div>
        if(i % 4 == 3)
        {
            @:</div>
        }
    }
</div>
